<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Language Preferences -->
    <PreferenceCategory
        android:key="language_preferences"
        android:title="@string/language_preferences">

        <ListPreference
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:defaultValue="en"
            android:entries="@array/language_options"
            android:entryValues="@array/language_values"
            android:key="language"
            android:padding="16dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:summary="@string/language_summary"
            android:title="@string/language_title"
            app:selectable="true"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"/>

    </PreferenceCategory>

    <!-- Theme Preferences -->
    <PreferenceCategory
        android:key="theme_preferences"
        android:title="@string/theme_preferences">

        <SwitchPreferenceCompat
            android:key="dark_mode"
            android:title="@string/dark_mode"
            android:summary="@string/dark_mode_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

    </PreferenceCategory>

    <!-- Storage Options -->
    <PreferenceCategory
        android:key="storage_preferences"
        android:title="@string/storage_options">

        <SwitchPreferenceCompat
            android:key="use_external_storage"
            android:title="@string/use_external_storage"
            android:summary="@string/use_external_storage_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

    </PreferenceCategory>

    <!-- Show System Apps -->
    <PreferenceCategory
        android:key="other_options"
        android:title="@string/other_options">

        <CheckBoxPreference
            android:key="show_system_apps"
            android:title="@string/show_system_apps"
            android:summary="@string/show_system_apps_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

    </PreferenceCategory>

</PreferenceScreen>
